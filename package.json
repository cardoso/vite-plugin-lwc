{
  "name": "vite-plugin-lwc-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.6.5",
  "scripts": {
    "build": "pnpm -r run build",
    "bump": "pnpm changeset version",
    "dev": "pnpm -r --filter='./packages/*' run dev",
    "test": "vitest",
    "prepare": "npx simple-git-hooks",
    "lint": "eslint .",
    "example:csr": "pnpm -r --filter='./examples/csr' run dev",
    "example:csr-with-base-components": "pnpm -r --filter='./examples/csr-with-base-components' run dev",
    "example:ssr": "pnpm -r --filter='./examples/ssr' run dev",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.11",
    "@vitest/browser": "^3.0.9",
    "@vitest/ui": "^3.0.9",
    "eslint": "^9.22.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "globals": "^16.0.0",
    "lint-staged": "^16.0.0",
    "playwright": "^1.51.1",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.2.2",
    "vite-plugin-lwc": "workspace:^",
    "vitest": "^3.0.9"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
